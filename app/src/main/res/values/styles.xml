<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="fontFamily">@font/capriola</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@android:color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.PrimaryDark">
        <item name="colorAccent">@color/colorPrimaryDark</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_chevron_left_24</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <dimen name="snackbar_textsize">17sp</dimen>

    <!--Splash screen theme.-->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/ic_launcher_round</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>