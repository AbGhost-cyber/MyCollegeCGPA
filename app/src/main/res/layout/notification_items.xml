<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/extra_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/notiItemName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/product_sans_bold"
            android:padding="1dp"
            android:text="Celebrating little wins"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/notiItemDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notiItemName"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/noti_item_checked"
            android:ellipsize="end"
            android:fontFamily="@font/product_sans_regular"
            android:padding="6dp"
            android:text="Looking back at what you've been up to recently in the app"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/noti_item_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:padding="20dp" />

    </RelativeLayout>
</LinearLayout>