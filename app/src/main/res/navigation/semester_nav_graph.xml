<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/semester_nav_graph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.crushtech.mycollegecgpa.ui.fragments.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_courseListFragment"
            app:destination="@id/courseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/othersFragment"
        android:name="com.crushtech.mycollegecgpa.ui.fragments.others.OthersFragment"
        android:label="OthersFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.crushtech.mycollegecgpa.ui.fragments.auth.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.crushtech.mycollegecgpa.ui.fragments.auth.SignUpFragment"
        android:label="SignUpFragment">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/courseListFragment"
        android:name="com.crushtech.mycollegecgpa.ui.fragments.course.CourseListFragment"
        android:label="CourseListFragment">
        <argument
            android:name="semesterId"
            app:argType="string" />
        <argument
            android:name="semesterName"
            app:argType="string" />
    </fragment>

</navigation>